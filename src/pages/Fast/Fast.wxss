.banner {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  margin-bottom: 20rpx;
  background: #fff; }
  .banner .banner__image {
    width: 293rpx;
    height: 198rpx; }
  .banner .banner__text {
    padding-left: 30rpx; }
  .banner .banner__title {
    color: #222222;
    font-size: 36rpx; }
  .banner .banner__graytext {
    color: #999999;
    font-size: 24rpx;
    margin-top: 26rpx; }
  .banner .banner__graytext--section {
    line-height: 45rpx; }

.navbar {
  position: relative;
  height: 88rpx;
  background: #fff;
  font-size: 0; }
  .navbar .navbar__item {
    color: #999999;
    font-size: 36rpx;
    line-height: 88rpx;
    width: 50%;
    text-align: center;
    display: inline-block; }
  .navbar .is-active {
    color: #0e6ae7; }
  .navbar .navbar__line {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 375rpx;
    height: 4rpx;
    background-color: #0e6ae7;
    -webkit-transition: .3s ease;
    transition: .3s ease; }

.form {
  padding: 30rpx;
  background: #fff;
  width: 100%; }
  .form .form__input {
    border-radius: 10rpx;
    border: solid 2rpx #c8c7cc;
    font-size: 28rpx;
    height: 88rpx;
    padding-left: 30rpx;
    margin-bottom: 30rpx; }
  .form .form__button {
    width: 100%;
    height: 100rpx;
    background-color: #0e6ae7;
    border-radius: 10rpx;
    font-size: 36rpx;
    color: #fff;
    letter-spacing: 2rpx;
    border: 0; }
  .form .is-disable {
    background: #ccc; }

.buttomtext {
  font-size: 24rpx;
  line-height: 36rpx;
  letter-spacing: 1rpx;
  color: #999;
  margin: 30rpx; }
