.form .form__group {
  margin-bottom: 60rpx;
  position: relative; }

.form .form__title {
  color: #0e6ae7;
  font-size: 24rpx;
  position: absolute;
  -webkit-transition: .35s ease all;
  transition: .35s ease all;
  opacity: 0;
  z-index: 2; }

.form .form__title--show {
  opacity: 1;
  -webkit-transform: translateY(-30rpx);
  -ms-transform: translateY(-30rpx);
  transform: translateY(-30rpx); }

.form .form__title--error {
  color: #ff3841; }

.form .form__inputwarp {
  position: relative; }

.form .form__input {
  border-bottom: 1rpx solid #e5e5e5;
  font-size: 28rpx;
  height: 88rpx;
  background: #fff;
  -webkit-transition: border .2s ease-in-out,background .2s ease-in-out,-webkit-box-shadow .2s ease-in-out;
  transition: border .2s ease-in-out,background .2s ease-in-out,-webkit-box-shadow .2s ease-in-out;
  transition: border .2s ease-in-out,background .2s ease-in-out,box-shadow .2s ease-in-out;
  transition: border .2s ease-in-out,background .2s ease-in-out,box-shadow .2s ease-in-out,-webkit-box-shadow .2s ease-in-out; }
  .form .form__input:hover {
    border-color: #0e6ae7; }

.form .form__righticon {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 2;
  right: 0;
  padding: 15rpx 20rpx; }

.form .form__close {
  width: 35rpx;
  height: 35rpx; }

.form .form__closeeye {
  width: 60rpx;
  height: 60rpx;
  position: relative;
  top: 0rpx; }

.form .form__openeye {
  width: 60rpx;
  height: 60rpx;
  position: relative;
  top: 9rpx; }
